{
  "name": "cypress-cucumber-framework",
  "version": "1.0.0",
  "description": "End-to-End Test Automation Framework using Cypress with Cucumber",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "cypress run --spec 'cypress/e2e/**/*.feature'",
    "test:headed": "cypress run --headed --spec 'cypress/e2e/**/*.feature'",
    "test:chrome": "cypress run --browser chrome --spec 'cypress/e2e/**/*.feature'",
    "test:firefox": "cypress run --browser firefox --spec 'cypress/e2e/**/*.feature'",
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*.feature'",
    "test:ui": "cypress run --spec 'cypress/e2e/ui/**/*.feature'",
    "report": "npx cypress-multi-reporters --reporter mochawesome",
    "clean": "rimraf cypress/videos cypress/screenshots cypress/downloads",
    "reports:archive": "node scripts/manage-reports.js archive",
    "reports:clean": "node scripts/manage-reports.js clean",
    "reports:combine": "node scripts/manage-reports.js combine",
    "reports:summary": "node scripts/manage-reports.js summary",
    "reports:list": "node scripts/manage-reports.js list",
    "reports:extract": "node scripts/manage-reports.js extract",
    "reports:manage": "node scripts/manage-reports.js"
  },
  "keywords": [
    "cypress",
    "cucumber",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Automation Developer",
  "license": "MIT",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.6",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.17.4",
    "cypress-multi-reporters": "^1.6.2",
    "esbuild": "^0.19.8",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.2",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^5.0.5",
    "archiver": "^6.0.1"
  },
  "dependencies": {
    "faker": "^6.6.6",
    "moment": "^2.29.4"
  }
} 